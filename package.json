{
  "name": "front-end-workshop",
  "version": "0.1.0",
  "description": "A very hands on workshop about essential tools and technologies to become a Front-End Developer.",
  "main": "src/app.js",
  "scripts": {
    "start": "parcel src/index.html",
    "prebuild": "rimraf dist",
    "build": "parcel build src/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezavile/front-end-workshop.git"
  },
  "author": "Edgar Zavala <ezavile@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ezavile/front-end-workshop/issues"
  },
  "homepage": "https://github.com/ezavile/front-end-workshop#readme",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^8.1.3",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.16.4",
    "rimraf": "2.6.2",
    "sass": "1.14.2"
  },
  "dependencies": {
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "prop-types": "^15.6.2",
    "evil-icons": "1.10.1",
    "jest": "23.6.0",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "reset-css": "4.0.1"
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      ".+\\.(scss)$": "identity-obj-proxy"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  }
}
